{
  "extends": [
    "@fczbkk",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "env": {
    "es6": true,
    "browser": true
  },
  "rules": {
    "semi": [
      "warn",
      "never"
    ],
    "max-len": [
      "warn",
      {
        "ignoreComments": true
      }
    ],
    "function-paren-newline": ["error", "consistent"]
  },
  "root": true
}
